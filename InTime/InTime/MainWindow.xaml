<Window x:Class="InTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InTime"
        mc:Ignorable="d"
        Title="InTime - Amministratore" Height="700" Width="800" MinHeight="300" MinWidth="700">
    <DockPanel Name="FullContainer">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Impostazioni" Click="Settings_Click" />
                <MenuItem Header="Chiudi" Click="Close_Click" InputGestureText="Alt+F4" />
            </MenuItem>
        </Menu>
        <DockPanel Name="SideContainer" Margin="10,0,10,10" DockPanel.Dock="Left" LastChildFill="True" Width="200">
            <Label DockPanel.Dock="Top">Lista progetti</Label>
            <GroupBox Name="NewProjectContainer"  Header="Nuovo progetto" Padding="5,10,5,5" DockPanel.Dock="Bottom" Margin="0,10,0,0">

                <StackPanel Orientation="Vertical">
                    <DockPanel>
                        <Label Margin="0,0,10,0" DockPanel.Dock="Left">Nome:</Label>
                        <TextBox x:Name="NewProjectNameBox" TextWrapping="Wrap" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <Button x:Name="NewProjectButton" Content="Aggiungi" Click="NewProjectButton_Click" Height="25" Width="90" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                </StackPanel>
            </GroupBox>
            <ListBox x:Name="ProjectList" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        </DockPanel>
        <DockPanel Name="DetailContainer" DockPanel.Dock="Right">
            <GroupBox Header="Progetto" Margin="0,5,10,0" DockPanel.Dock="Top" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="153*" />
                        <ColumnDefinition Width="133*" />
                        <ColumnDefinition Width="141*" />
                        <ColumnDefinition Width="123*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="26*" />
                        <RowDefinition Height="26*" />
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="26" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Nome:</Label>
                    <TextBlock x:Name="TextBlockProject" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center" />
                    <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Descrizione:</Label>
                    <TextBlock x:Name="Description" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Center" />
                    <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">Tempo di lavoro stimato:</Label>
                    <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center">120:00</TextBlock>
                    <Label Grid.Row="3" Grid.Column="2" VerticalAlignment="Center">Tempo di lavoro totale:</Label>
                    <TextBlock Grid.Row="3" Grid.Column="3" VerticalAlignment="Center">01:25</TextBlock>
                </Grid>
            </GroupBox>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10" HorizontalAlignment="Left">
                <ComboBox x:Name="ComboPerson" Width="162" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="10">
                <Button VerticalAlignment="Bottom" Margin="10" Height="25" Width="90">OK</Button>
                <Button x:Name="CancelButton" VerticalAlignment="Bottom" Margin="10" Height="25" Width="90" Click="CancelButton_Click">Annulla</Button>
                <Button VerticalAlignment="Bottom" Margin="10" Height="25" Width="90">Applica</Button>
            </StackPanel>
            <ScrollViewer Margin="0,6,0,0">

            </ScrollViewer>
        </DockPanel>
    </DockPanel>
</Window>
