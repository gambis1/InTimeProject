<Window x:Class="InTime.User.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InTime.User"
        mc:Ignorable="d"
        Title="UserWindow" Height="700" Width="800">
    <DockPanel Name="FullContainer">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Login" ToolTip="Lele"/>
                <Separator />
                <MenuItem Header="Chiudi" Click="Close_Click" InputGestureText="Alt+F4" />
            </MenuItem>
        </Menu>
        <DockPanel Name="SideContainer" Margin="10,0,10,10" DockPanel.Dock="Left" LastChildFill="True" Width="200">
            <Label DockPanel.Dock="Top">Lista progetti</Label>
            <ListBox x:Name="ProjectList" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        </DockPanel>
        <DockPanel Name="DetailContainer" DockPanel.Dock="Right">
            <GroupBox Header="Progetto" Margin="0,5,10,0" DockPanel.Dock="Top" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="142*" />
                        <ColumnDefinition Width="144*" />
                        <ColumnDefinition Width="169*" />
                        <ColumnDefinition Width="95*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="26*" />
                        <RowDefinition Height="26*" />
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="26" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Height="26" Margin="0,0,87,0">Nome:</Label>
                    <TextBlock x:Name="TextBlockProject" Grid.Row="0" VerticalAlignment="Center" Height="16" Margin="60,5,0,5" />
                    <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Height="26">Descrizione:</Label>
                    <TextBlock x:Name="Description" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Margin="0,6,0,4" />
                    <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Height="26">Tempo di lavoro stimato:</Label>
                    <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="16" Margin="10,5,5,5">120:00</TextBlock>
                    <Label Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Height="26">Tempo di lavoro totale:</Label>
                    <TextBlock x:Name="WorkTime" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Height="16" Margin="0,5"></TextBlock>
                    <Label Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Height="26" Margin="5,0,88,0" Content="Cliente:"/>
                    <TextBlock x:Name="TextBlockCustomers" Grid.Row="0" VerticalAlignment="Center" Height="16" Margin="62,5,0,5" Grid.Column="1" />
                    <Label Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Height="26" Margin="0,0,78,0" Content="Data creazione:" RenderTransformOrigin="0.235,0.577"/>
                    <TextBlock x:Name="TextBlockdateCreation" Grid.Row="0" VerticalAlignment="Center" Height="16" Margin="96,5,0,5" Grid.Column="2" />
                    <Label Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Height="26" Margin="0,0,47,0" Content="Attivo:"/>
                    <TextBlock x:Name="TextBlockdateCreation_Copy" Grid.Row="0" VerticalAlignment="Bottom" Height="16" Margin="48,0,0,5" Grid.Column="3" />
                </Grid>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="10">
                <Button VerticalAlignment="Bottom" Margin="10" Height="25" Width="90">OK</Button>
                <Button x:Name="CancelButton" VerticalAlignment="Bottom" Margin="10" Height="25" Width="90" Click="CancelButton_Click">Annulla</Button>
                <Button VerticalAlignment="Bottom" Margin="10" Height="25" Width="90">Applica</Button>
            </StackPanel>
            <DataGrid Name="NameGrid" AutoGenerateColumns="False" GridLinesVisibility="All" ItemsSource="{Binding}" Margin="0,92,0,-5">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="ColumnName" Header="Nome" Width="300" Binding="{Binding name}" />
                    <DataGridTextColumn x:Name="ColumnTime" Header="Tempo" Width="400" Binding="{Binding time}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </DockPanel>
</Window>
